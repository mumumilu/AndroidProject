.container{
    width: 100vw;
    height: 100vh;
}

.left{
    width: 24vw;
    position: fixed;
    left: 0;
    top: 0;
}

.item{
    text-align: center;
    font-size: 3.3vw;
    font-weight: 300;
    color: #666;
    margin-bottom: 3vh;
}

.right{
    width: 76vw;
    margin-left: 24vw;
    padding-right: 4vw;
    box-sizing: border-box;
}

.right image{
    height: 10vh;
    width: 100%;
}

.title{
    font-size: 4vw;
    color: #333;
    font-weight: 700;
    margin-top: 2vh;
}

.goods{
    width: 100%;
    height: 8vh;
    margin: 1vh 0;
    background-color: #f8f8f8;
    display: flex;
    align-items: center;
}

.goods image{
    width: 18vw;
    height: 18vw;
}

.content{
    font-size: 3.8vw;
    color: #333;

}

.content view{
    margin-top: 1vh;
}

.selected-item{
    font-size: 3.8vw;
    color: #333;
    font-weight: 700;
    border-left: 0.5vw solid #ff6700;
}