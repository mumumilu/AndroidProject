<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_context">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="70dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/home_lost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shapechoose"
            android:layout_margin="25dp"
            android:layout_weight="1"
            android:text="+失物"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="40dp"
            />
        <Button
            android:id="@+id/home_pick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shapechoose1"
            android:layout_margin="5dp"
            android:text="+拾物"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="60dp"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="120dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shapechoose3"
            android:layout_margin="5dp"
            android:text="+好友"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="50dp"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>